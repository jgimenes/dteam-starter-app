generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id           String    @id @default(ulid())
  email        String    @unique
  phoneNumber  String?
  otp          String?
  otpExpiresAt DateTime?
  isVerified   DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deleteAt     DateTime?

  @@map("accounts")
}

model EmailTemplate {
  id          String    @id @default(ulid())
  name        String    @unique
  description String?
  body        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deleteAt    DateTime?

  @@map("email_templates")
}

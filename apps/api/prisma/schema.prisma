generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id           String    @id @default(ulid())
  email        String    @unique
  phoneNumber  String?
  otp          String?
  otpExpiresAt BigInt?
  isVerified   DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deleteAt     DateTime?

  @@map("accounts")
}
